  "shop": {
    "default_category": "General",
    "max_items_per_page": 10,
    "catalog": []
  },
  "schedules": [
    {
      "id": "hourly_reward",
      "type": "interval",
      "minutes": 60,
      "actions": [
        {
          "action": "economy.grant_active_chatters",
          "amount": 10,
          "reason": "Hourly activity reward"
        }
      ]
    }
  ],
  "events": [
    {
      "on": "message_create",
      "when": {
        "channel": "shop_channel",
        "regex": "^/shop$"
      },
      "actions": [
        { "action": "shop.render_page", "page": 1 }
      ]
    }
  ],
  "commands": [
    {
      "name": "balance",
      "aliases": ["bal", "points"],
      "description": "Show your shop points balance (or another member's).",
      "options_schema": [
        { "name": "user", "type": "user", "required": false }
      ],
      "cooldown_seconds": 3,
      "actions": [
        { "action": "economy.get_balance", "from": "args.user|author", "assign": "balance" },
        { "action": "discord.reply_embed",
          "title": "Your Balance",
          "description": "Balance: {{balance}} {{economy.currency_name}}" }
      ]
    },
    {
      "name": "shop",
      "description": "Browse the shop catalog.",
      "options_schema": [
        { "name": "page", "type": "integer", "required": false, "default": 1 }
      ],
      "actions": [
        { "action": "shop.render_page", "page_from": "args.page|1" }
      ]
    },
